@model TRS.Models.Entry

@{
    ViewData["Title"] = "Delete entry";
}
<h1>@ViewData["Title"]</h1>
<div class="text-left">
    <p>The following entry will be deleted</p>
    <form asp-action="EntryDeleteConfirm" asp-route-index="@Model.Index" asp-route-date="@Model.Date">
        <input type="hidden" asp-for="Index"/>
        <div class="form-group">
            <label asp-for="Project.ProjectName" class="control-label">Project</label>
            <input asp-for="Project.ProjectName" type="text" class="form-control" id="projectName" required readonly>
            </input>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" required readonly>
        </div>
        <div class="form-group">
            <label asp-for="Duration" class="control-label"></label>
            <input asp-for="Duration" class="form-control" required readonly>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" required readonly>
        </div>
        <div class="text-left">
            <p>Are you sure you want to delete this entry?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "DailyView", "Home", new { date = Model.Date.ToString("yyyy-MM-dd")}, new {@class = "btn btn-secondary" })
        </div>
    </form>
</div>